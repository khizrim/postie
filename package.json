{
  "name": "postie",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "pnpm run build && node --loader ts-node/esm ./server.ts",
    "dev": "vite --open --port 3000",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint:code": "eslint './src/**/*.{js,ts,tsx}'",
    "lint:styles": "stylelint './src/**/*.css'",
    "lint:prettier": "prettier --check './src' './public'",
    "lint:prettier:fix": "prettier --write './src' './public'",
    "lint:fix": "pnpm lint:code --fix && pnpm lint:styles --fix && pnpm lint:prettier:fix",
    "lint": "pnpm lint:code && pnpm lint:styles && pnpm lint:prettier"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.5.0",
    "eslint-plugin-promise": "^6.1.1",
    "express": "^4.18.2",
    "handlebars": "^4.7.8",
    "normalize.css": "^8.0.1",
    "prettier": "3.1.1",
    "stylelint": "^16.1.0",
    "stylelint-config-clean-order": "^5.2.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-order": "^6.0.4",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  }
}
