{
  "name": "postie",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "start": "npm run build && node --loader ts-node/esm ./server.ts",
    "dev": "vite --open --port 3000",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint:code": "eslint './src/**/*.{js,ts,tsx}'",
    "lint:styles": "stylelint './src/**/*.css'",
    "lint:prettier": "prettier --check './src' './public'",
    "lint:prettier:fix": "prettier --write './src' './public'",
    "lint:fix": "npm run lint:code --fix && npm run lint:styles --fix && npm run lint:prettier:fix",
    "lint": "npm run lint:code && npm run lint:styles && npm run lint:prettier"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.20",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "express": "^4.18.2",
    "handlebars": "^4.7.8",
    "nanoid": "^5.0.6",
    "normalize.css": "^8.0.1",
    "prettier": "3.2.5",
    "stylelint": "^16.2.1",
    "stylelint-config-clean-order": "^5.4.1",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-order": "^6.0.4",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.4"
  }
}
