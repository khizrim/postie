{
  "name": "postie",
  "private": true,
  "version": "0.0.1",
  "main": "server.ts",
  "type": "module",
  "scripts": {
    "node-run": "node --import tsx",
    "start": "npm run build && npm run node-run ./server.ts",
    "dev": "vite --open --port 3000",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint:code": "eslint './src/**/*.{js,ts,tsx}'",
    "lint:code:fix": "eslint './src/**/*.{js,ts,tsx}' --fix",
    "lint:styles": "stylelint './src/**/*.css'",
    "lint:styles:fix": "stylelint './src/**/*.css' --fix",
    "lint:prettier": "prettier --check './src' './public'",
    "lint:prettier:fix": "prettier --write './src' './public'",
    "lint:fix": "npm run lint:code:fix && npm run lint:styles:fix && npm run lint:prettier:fix",
    "lint": "npm run lint:code && npm run lint:styles && npm run lint:prettier",
    "test": "mocha",
    "check": "npm run lint && npm run test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/chai": "4.3.16",
    "@types/express": "4.17.21",
    "@types/jsdom": "^21.1.7",
    "@types/mocha": "10.0.7",
    "@types/node": "20.14.9",
    "@types/sinon": "17.0.3",
    "@typescript-eslint/eslint-plugin": "7.14.1",
    "@typescript-eslint/parser": "7.14.1",
    "chai": "5.1.1",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "express": "4.19.2",
    "handlebars": "4.7.8",
    "husky": "^9.0.11",
    "ignore-styles": "^5.0.1",
    "jsdom": "^24.1.0",
    "mocha": "10.5.2",
    "nanoid": "5.0.7",
    "normalize.css": "8.0.1",
    "prettier": "3.3.2",
    "sinon": "18.0.0",
    "stylelint": "16.6.1",
    "stylelint-config-clean-order": "6.0.0",
    "stylelint-config-standard": "36.0.1",
    "stylelint-order": "6.0.4",
    "ts-node": "^10.9.2",
    "tslib": "2.6.3",
    "tsx": "4.16.0",
    "typescript": "5.4.5",
    "typescript-eslint": "7.14.1",
    "vite": "5.2.11",
    "vite-plugin-handlebars": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run lint:fix && npm run test",
      "pre-push": "npm-run lint && npm run test"
    }
  }
}
