{
  "name": "postie",
  "private": true,
  "version": "0.0.1",
  "main": "server.ts",
  "type": "module",
  "scripts": {
    "node-run": "node --import ./ts-loader.mjs --no-warnings",
    "start": "npm run build && npm run node-run ./server.ts",
    "dev": "vite --open --port 3000",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint:code": "eslint './src/**/*.{js,ts,tsx}'",
    "lint:code:fix": "eslint './src/**/*.{js,ts,tsx}' --fix",
    "lint:styles": "stylelint './src/**/*.css'",
    "lint:styles:fix": "stylelint './src/**/*.css' --fix",
    "lint:prettier": "prettier --check './src' './public'",
    "lint:prettier:fix": "prettier --write './src' './public'",
    "lint:fix": "npm run lint:code:fix && npm run lint:styles:fix && npm run lint:prettier:fix",
    "lint": "npm run lint:code && npm run lint:styles && npm run lint:prettier"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "express": "^4.19.2",
    "handlebars": "^4.7.8",
    "nanoid": "^5.0.7",
    "normalize.css": "^8.0.1",
    "prettier": "3.3.2",
    "stylelint": "^16.6.1",
    "stylelint-config-clean-order": "^6.0.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-order": "^6.0.4",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.3",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.14.1",
    "vite": "^5.2.11"
  }
}
