{{#> PanelWrapper border='bottom'}}
  <div class="chat-header">
    <a href="/account"
       class="chat-header__user-account link"
       aria-label="{{ currentChat.title }}">
      {{{ PersonaComponent avatar=currentChat.avatar display_name=currentChat.title }}}
    </a>
    <div class="chat-header__controls">
      {{{ ButtonComponent label='Add User' type=button.type width=button.width onClick=addUser.onClick }}}
      {{{ ButtonComponent label='Delete User' type=button.type width=button.width onClick=deleteUser.onClick }}}
      {{{ ButtonComponent label='Delete Chat' type=button.type width=button.width onClick=deleteChat.onClick }}}
    </div>
  </div>
  {{/PanelWrapper}}
