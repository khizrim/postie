{{#> MainLayout}}
  <div class="account">
    {{{ AvatarComponent avatar=avatar }}}

    <div class="account__heading">
      <h2 class="title">{{ user.name }}</h2>
      <p class="description">{{ user.login }}</p>
    </div>

    {{#> Form class='account__form'}}
      {{#each inputs as |input|}}
        {{#if isEditing}}
          {{{ InputComponent name=input.name
                             style=input.style
                             label=input.label
                             size=input.size
                             placeholder=input.placeholder
                             value=input.value
                             type=input.type
                             autocomplete=input.autocomplete
                             errorMessage=input.errorMessage
                             onChange=input.onChange
                             required=input.required }}}
        {{else}}
          {{{ InputComponent name=input.name
                             style=input.style
                             label=input.label
                             size=input.size
                             placeholder=input.placeholder
                             value=input.value
                             type=input.type
                             autocomplete=input.autocomplete
                             errorMessage=input.errorMessage
                             onChange=input.onChange
                             required=input.required
                             disabled=true }}}
        {{/if}}
      {{/each}}
    {{/Form}}

    <div class="account__actions">
      {{#each actions as |action|}}
        {{{ LinkComponent link=action }}}
      {{/each}}
    </div>

    <div class="account__back-button">
      {{{ ButtonComponent icon=backButton.icon size=backButton.size type=backButton.type width=backButton.width
                          label=backButton.label }}}
    </div>
  </div>
{{/MainLayout}}
